<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" strict="true">
    <Properties>
        <Property name="logPatternConsole">
            %m%n
        </Property>
        <Property name="logPatternFile">
            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
        </Property>
    </Properties>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%highlight{%-5level: %msg%n%throwable}"/>
            <RegexFilter regex="ru.bscmsc.task.In" onMatch="DENY" onMismatch="ACCEPT"/>
        </Console>
        <RollingFile name="RollingFile" fileName="log.txt" filePattern="log-%d{yyyy-MM-dd}-%i.txt">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %5p %t %-5l - %m%n"/>
            <SizeBasedTriggeringPolicy size="5 MB"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="${sys:log.level:-debug}">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="ru.bscmsc.task.In" level="${sys:log.level:-debug}" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>